{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"]
}
